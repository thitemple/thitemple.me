{
	"name": "thitemple.me",
	"version": "2.0.0",
	"private": true,
	"packageManager": "pnpm@10.26.0",
	"scripts": {
		"dev": "vite dev",
		"build": "export NODE_OPTIONS='--max-old-space-size=4096' && vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "svelte-kit sync && prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:run": "vitest run",
		"test:integration": "vitest run --config vitest.config.integration.ts",
		"validate:posts": "node scripts/validate-posts.js",
		"validate": "pnpm lint && pnpm check && pnpm validate:posts && pnpm test:run && pnpm build"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.10.4",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"glob": "^11.1.0",
		"globals": "^16.5.0",
		"gray-matter": "^4.0.3",
		"happy-dom": "^15.11.7",
		"mdsvex": "^0.12.6",
		"msw": "^2.12.4",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vitest": "^3.2.4"
	},
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"dependencies": {
		"@vercel/analytics": "^1.6.1",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.536.0",
		"mdsvex-relative-images": "^2.0.0",
		"medium-zoom": "^1.1.0",
		"rehype-slug": "^6.0.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-toc": "^9.0.0",
		"shiki": "^3.20.0",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.2.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
