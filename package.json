{
	"name": "thitemple.me",
	"version": "2.0.0",
	"private": true,
	"packageManager": "pnpm@10.28.2",
	"scripts": {
		"dev": "vite dev",
		"build": "export NODE_OPTIONS='--max-old-space-size=4096' && vite build",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "svelte-kit sync && prettier --check . && eslint .",
		"format": "prettier --write .",
		"validate:posts": "node scripts/validate-posts.js",
		"validate": "pnpm lint && pnpm check && pnpm validate:posts && pnpm build"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24.10.9",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"glob": "^11.1.0",
		"globals": "^16.5.0",
		"gray-matter": "^4.0.3",
		"mdsvex": "^0.12.6",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.48.5",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"type": "module",
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"dependencies": {
		"@vercel/analytics": "^1.6.1",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.536.0",
		"mdsvex-relative-images": "^2.0.0",
		"medium-zoom": "^1.1.0",
		"rehype-slug": "^6.0.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-toc": "^9.0.0",
		"shiki": "^3.21.0",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.3.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
